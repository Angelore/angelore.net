  a
    background: none
    color: inherit
    text-decoration: none

  .title
    margin-top: 0
    margin-bottom: 0
    color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 1.8rem
    line-height: 2.2rem

    antialias()

